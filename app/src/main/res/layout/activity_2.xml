<?xml version="1.0" encoding="utf-8"?>

<!-- Materi Java -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Activity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtMateri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:text="Materi"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtMateri2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingLeft="40dp"
            android:paddingBottom="5dp"
            android:text="Pengenalan Java"
            android:textColor="@color/black"
            android:textSize="25sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:columnOrderPreserved="false">
            <androidx.cardview.widget.CardView
                android:layout_width="311dp"
                android:layout_height="72dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="30dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="01 Pengenalan Java"
                        android:fontFamily="@font/poppins"
                        android:textAllCaps="false"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:background="@drawable/gradient"
                        android:textColor="@color/black"
                        android:id="@+id/btn2_1">
                    </Button>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:columnOrderPreserved="false">
            <androidx.cardview.widget.CardView
                android:layout_width="311dp"
                android:layout_height="72dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="30dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn2_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient"
                        android:fontFamily="@font/poppins"
                        android:gravity="left"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:text="02 Percabangan&amp;Perulangan"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="14sp"></Button>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:columnOrderPreserved="false">
            <androidx.cardview.widget.CardView
                android:layout_width="311dp"
                android:layout_height="72dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="30dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="03 CRUD pada Java"
                        android:fontFamily="@font/poppins"
                        android:textAllCaps="false"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:background="@drawable/gradient"
                        android:textColor="@color/black"
                        android:id="@+id/btn2_3">
                    </Button>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>




        <!-- ini linier layout page-->
    </LinearLayout>


</ScrollView>